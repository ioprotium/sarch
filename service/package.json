{
  "name": "sarch-service",
  "version": "0.1.0",
  "description": "Sarch service",
  "main": "dist/index.js",
  "author": "Brian Mayo",
  "license": "MIT",
  "private": false,
  "scripts": {
    "preinstall": "yarn --cwd ../client install",
    "postinstall": "yarn build",
    "dev": "NODE_ENV=\"dev\" nodemon",
    "build:service": "tsc",
    "build": "node ./scripts/build.js",
    "start": "NODE_ENV=\"prod\" node dist/index.js",
    "test": "jest --detectOpenHandles",
    "docs:dev": "redoc-cli serve swagger.json --watch",
    "docs": "redoc-cli bundle src/api/docs/swagger.json"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*/specs.+(ts|js)"
    ]
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "config": "^3.0.0",
    "express": "^4.16.4",
    "express-rate-limit": "^3.3.2",
    "firebase-admin": "^6.3.0",
    "helmet": "^3.15.0",
    "lodash": "^4.17.11",
    "morgan": "^1.9.1",
    "uuid": "^3.3.2",
    "winston": "^3.1.0",
    "winston-daily-rotate-file": "^3.5.1"
  },
  "devDependencies": {
    "@types/config": "^0.0.34",
    "@types/express": "^4.16.0",
    "@types/express-rate-limit": "^2.9.3",
    "@types/helmet": "^0.0.42",
    "@types/jest": "^23.3.10",
    "@types/morgan": "^1.7.35",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^3.4.4",
    "jest": "^23.6.0",
    "js-yaml": "^3.12.0",
    "nodemon": "^1.18.7",
    "redoc-cli": "^0.7.0",
    "shelljs": "^0.8.3",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.1"
  },
  "engines": {
    "node": ">= 7.9.0"
  }
}
